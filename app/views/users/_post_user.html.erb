<% @posts.each do |post| %>
  <div class="col-4">
  <%= link_to post_path(post) do %>
    <div class="post-stat d-flex justify-content-center align-items-center">
      <span>
        <i class="fa fa-heart" aria-hidden="true">
        <%= post.likes.size %>
       </i>
        <i class="ml-3 fa fa-comment" aria-hidden="true">
          <%= post.comments.size %>
        </i>
     </span>
    </div>
      <%= image_tag post.photos.first.image.url(:standard), class: "card-img-top image-preview" %>
    <% end %>
   </div>
<% end %>
